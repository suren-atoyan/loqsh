{
  "name": "loqsh_bot",
  "version": "0.0.1",
  "description": "a լոքշ Telegram bot",
  "repository": {
    "type": "git",
    "url": "https://github.com/suren-atoyan/loqsh"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "webpack",
    "dev": "nodemon",
    "lint": "eslint \"./src\" --ext \".js,.jsx\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "node dist/index.js",
    "start-tunnel": "ngrok http 8080",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@urban-bot/core": "0.0.13",
    "@urban-bot/facebook": "0.0.13",
    "@urban-bot/slack": "0.0.13",
    "@urban-bot/telegram": "0.0.13",
    "babel-loader": "^8.1.0",
    "dotenv": "^8.2.0",
    "file-loader": "^6.0.0",
    "node-fetch": "^2.6.1",
    "react": "^16.13.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "jest": "^25.4.0",
    "ngrok": "^3.2.7",
    "nodemon": "^2.0.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10"
          }
        }
      ],
      "@babel/react"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,jsx,json",
    "exec": "webpack --mode=development && node ./dist/index.js"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "src"
  }
}
